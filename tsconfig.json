{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": false,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "outFile": "./dist/index.js"
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ]
}
